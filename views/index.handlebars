<main id="main-container" class="container" role="main">
    
    <section class="row">
        <div class="col-12">
            <img src="/assets/img/burger.png" alt="burger" class="mx-auto d-block">
            <h1 class="text-center">Eat-Da-Burger</h1>
        </div><!-- end row 1 col 1 -->
    </section><!-- end row 1 -->
    
    <section class="row">
        <div class="col-12 col-md-4">
            <h2 class="text-center">Burgers ready to eat!</h2>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.id}}
                    {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn-primary mx-auto d-block" type="submit">Devour this burger!</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div><!-- end row 2 col 1 -->
        <div class="col-12 col-md-4">
            <h2 class="text-center">Add A Burger!</h2>
            <form class="create-update-form" action="/" method="POST">
                <div class="form-group">
                    <p class="text-center">Enter a burger name and click Submit to order</p>
                    <input class="mx-auto d-block" type="text" id="ca" name="burger_name">
                </div>
                <button class="btn-primary mx-auto d-block" type="submit">Submit</button>
            </form>
        </div><!-- end row 2 col 2 -->
        <div class="col-12 col-md-4">
            <h2 class="text-center">Burgers devoured!</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </div><!-- end row 2 col 3 -->
    </section><!-- end row 2 -->

</main><!-- end main container -->

<footer class="container" role="content info">
    Copyright &copy;
</footer>